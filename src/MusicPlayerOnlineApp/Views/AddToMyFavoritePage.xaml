<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:pages="http://rotorgames.com"
                 x:Class="MusicPlayerOnlineApp.Views.AddToMyFavoritePage">
    <ScrollView  HorizontalOptions="Fill"  VerticalOptions="Fill">
        <StackLayout BackgroundColor="#151515" Padding="10">
            <CollectionView ItemsSource="{Binding MyFavoriteList}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Grid.Column="0">
                            <Label Text="{Binding Name}" BackgroundColor="#404040" TextColor="#DADADA"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</pages:PopupPage>