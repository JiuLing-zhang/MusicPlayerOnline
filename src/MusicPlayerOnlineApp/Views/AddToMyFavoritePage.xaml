<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:pages="http://rotorgames.com"
                 x:Class="MusicPlayerOnlineApp.Views.AddToMyFavoritePage">
    <ScrollView  HorizontalOptions="Fill"  VerticalOptions="End">
        <StackLayout BackgroundColor="#151515" HeightRequest="250" Padding="10">
            <Button HorizontalOptions="Start" VerticalOptions="Center" Text="创建歌单" TextColor="#E0E0E0" FontSize="17" Clicked="BtnAddMyFavorite_Clicked"></Button>
            <CollectionView ItemsSource="{Binding MyFavoriteList}" SelectionMode="Single" SelectionChanged="CollectionView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" BackgroundColor="Transparent" FontSize="17" TextColor="#DADADA"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</pages:PopupPage>