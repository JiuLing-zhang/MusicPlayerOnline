<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayerOnlineApp.Views.PlaylistPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelMusicSearching" TargetType="Label">
                <Setter Property="IsVisible" Value="false"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Playlist.Count}" Value="0" TargetType="Label">
                        <Setter Property="IsVisible" Value="true"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Grid">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                            Value="#929292" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="PlayerStateImg" TargetType="ImageButton">
                <Setter Property="Source" Value="null"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsPlaying}" Value="true" TargetType="ImageButton">
                        <Setter Property="Source" Value="pause_button"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsPlaying}" Value="false" TargetType="ImageButton">
                        <Setter Property="Source" Value="circled_play"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Orientation="Vertical"  BackgroundColor="#010101" Padding="10">
            <StackLayout>
                <Entry Text="{Binding SearchKeyword}" Placeholder="输入歌曲名搜索" Completed="TxtKeywordEntry_Completed" TextColor="#DADADA" PlaceholderColor="#929292"></Entry>
            </StackLayout>
            <StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label x:Name="LblMsg" Padding="0,10,0,0" FontSize="16" Text="播放列表居然是空的...." TextColor="#E0E0E0" HorizontalOptions="Center" Style="{StaticResource LabelMusicSearching}"></Label>
                    <CollectionView SelectionChanged="CollectionView_SelectionChanged"  ItemsSource="{Binding Playlist}" SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10,10,10,10" RowDefinitions="*" ColumnDefinitions="*,20">
                                    <StackLayout Grid.Column="0" Orientation="Vertical">
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding Name}" TextColor="#E0E0E0" FontSize="18" VerticalOptions="End"/>
                                            <Label TextColor="#929292" Text="{Binding Artist,StringFormat='{} - {0}'}" FontSize="16" VerticalOptions="End" />
                                        </StackLayout>
                                    </StackLayout>
                                    <ImageButton Grid.Column="1" BackgroundColor="Transparent" Source="plus_math" ClassId="{Binding Id}" Clicked="BtnAddToMyFavorite_Clicked"></ImageButton>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
            <StackLayout Padding="5" Orientation="Horizontal" HeightRequest="50" >
                <StackLayout HorizontalOptions="Start" VerticalOptions="Center">
                    <Frame CornerRadius="20" 
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           IsClippedToBounds="True" BackgroundColor="#404040">
                        <Image Source="{Binding CurrentMusic.ImageUrl}"></Image>
                    </Frame>
                </StackLayout>
                <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Spacing="0">
                    <Label Text="{Binding CurrentMusic.Name}" TextColor="#E0E0E0" FontSize="18"/>
                    <Label Text="{Binding CurrentMusic.Artist}" TextColor="#929292" FontSize="16"/>
                </StackLayout>
                <StackLayout HorizontalOptions="End" VerticalOptions="Center">
                    <ImageButton HeightRequest="35"  BackgroundColor="Transparent" Clicked="PlayerStateChange_Clicked" Style="{StaticResource PlayerStateImg}" ></ImageButton>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>